<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eryansky.modules.sys.dao.ConfigDao">

	<cache type="com.eryansky.j2cache.mybatis.J2CacheAdapter">
		<property name="encodeKey" value="true"></property>
	</cache>

	<sql id="sysConfigColumns">
		a.id AS "id",
		a.code AS "code",
		a.value AS "value",
		a.remark AS "remark"
	</sql>

	<select id="get" resultType="Config">
		SELECT
		<include refid="sysConfigColumns"/>
		FROM t_sys_config a
		WHERE a.id = #{id}
	</select>

	<select id="getBy" resultType="Config">
		SELECT <include refid="sysConfigColumns"/>
		FROM t_sys_config a
		<where>a.code = #{code}</where>
	</select>

	<select id="findList" resultType="Config">
		SELECT
		<include refid="sysConfigColumns"/>
		FROM t_sys_config a
		<where>
			<if test="code != null and code != ''">
				AND a.code LIKE
				<if test="dbName == 'db2'">'%'||#{code}||'%'</if>
				<if test="dbName == 'mysql'">CONCAT('%', #{code}, '%')</if>
			</if>
		</where>
		<choose>
			<when test="entityPage !=null and entityPage.orderBy != null and entityPage.orderBy != ''">
				ORDER BY ${entityPage.orderBy} ${entityPage.order}
			</when>
			<otherwise>
				ORDER BY a.code ASC
			</otherwise>
		</choose>
	</select>

	<select id="findQueryList" resultType="Config">
		SELECT
		<include refid="sysConfigColumns"/>
		FROM t_sys_config a
		<where>
			<if test="query != null and query != ''">
				AND (a.code LIKE
				<if test="dbName == 'db2'">'%'||#{query}||'%'</if>
				<if test="dbName == 'mysql'">CONCAT('%', #{query}, '%')</if>
				OR a.value LIKE
				<if test="dbName == 'db2'">'%'||#{query}||'%'</if>
				<if test="dbName == 'mysql'">CONCAT('%', #{query}, '%')</if>
				)
			</if>
		</where>
		<choose>
			<when test="entityPage !=null and entityPage.orderBy != null and entityPage.orderBy != ''">
				ORDER BY ${entityPage.orderBy} ${entityPage.order}
			</when>
			<otherwise>
				ORDER BY a.code ASC
			</otherwise>
		</choose>
	</select>

	<select id="findAllList" resultType="Config">
		SELECT
		<include refid="sysConfigColumns"/>
		FROM t_sys_config a
		<where>
		</where>
		<choose>
			<when test="entityPage !=null and entityPage.orderBy != null and entityPage.orderBy != ''">
				ORDER BY ${entityPage.orderBy} ${entityPage.order}
			</when>
			<otherwise>
				ORDER BY a.code ASC
			</otherwise>
		</choose>
	</select>

	<insert id="insert">
		INSERT INTO t_sys_config(
			id,
			code,
			value,
			remark
		) VALUES (
			#{id},
			#{code},
			#{value},
			#{remark}
		)
	</insert>

	<update id="update">
		UPDATE t_sys_config SET
			code = #{code},
			value = #{value},
			remark = #{remark}
		WHERE id = #{id}
	</update>

	<delete id="delete">
		DELETE FROM t_sys_config
		WHERE id = #{id}
	</delete>

	<delete id="clear">
		DELETE FROM t_sys_config
		WHERE id = #{id}
	</delete>

	<delete id="clearAll">
		DELETE FROM t_sys_config
	</delete>

</mapper>